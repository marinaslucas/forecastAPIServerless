{
  "name": "node-serverless",
  "version": "1.0.0",
  "private": true,
  "description": "Sallve Node Serverless Monorepo",
  "license": "UNLICENSED",
  "main": "src/handler.js",
  "workspaces": [
    "services/**"
  ],
  "scripts": {
    "bot": "lerna bootstrap",
    "quiz": "yarn workspace quiz-result",
    "start": "serverless --stage dev offline",
    "test": "lerna run test -- --passWithNoTests",
    "coverage": "yarn test --coverage",
    "deploy-stg": "serverless deploy --stage stg",
    "lint": "eslint --ext .ts .",
    "lint:ci": "eslint --quiet --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "format": "prettier --write \"services/**/*.ts\"",
    "format:check": "prettier --check \"services/**/*.{ts,tsx}\"",
    "new:service": "ts-node services/template/src/index.ts",
    "coverage:combined": "node ./scripts/aggregate-services-coverage.js && nyc report --reporter lcov"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.33.0",
    "@aws-sdk/lib-dynamodb": "^3.33.0",
    "@types/http-errors": "1.8.1",
    "axios": "0.24.0",
    "bluebird": "^3.7.2",
    "currency.js": "^2.0.3",
    "dotenv": "^11.0.0",
    "http-errors": "1.8.1",
    "luxon": "^1.26.0",
    "luxon-business-days": "^2.8.2",
    "mout": "^1.2.3",
    "winston": "^3.5.1",
    "winston-cloudwatch": "^3.1.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.85",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.4.0",
    "@types/winston": "^2.4.4",
    "eslint": "^7.26.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "mockdate": "^3.0.5",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "serverless": "^2.41.2",
    "serverless-bundle": "^4.3.1",
    "serverless-domain-manager": "^5.1.3",
    "serverless-lift": "^1.11.0",
    "serverless-localstack": "^0.4.35",
    "serverless-offline": "^8.4.0",
    "serverless-offline-ssm": "^5.2.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0"
  }
}
